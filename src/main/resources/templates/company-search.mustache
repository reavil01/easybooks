{{>layout/header}}
{{^isPopup}}
    {{>layout/navigation}}
{{/isPopup}}

<div class="col-md-12">
    <div class="form-group">
        <form>
            <label for="name">사업자번호:</label>
            <input type="text" id="search-by-company-number" {{#number}}value="{{number}}"{{/number}}>
            <button type="button" class="btn btn-primary" id="btn-company-number-search">검색</button>

            <label>사업자명:</label>
            <input type="text" id="search-by-company-name" {{#name}}value="{{name}}"{{/name}}>
            <button type="button" class="btn btn-primary" id="btn-company-name-search">검색</button>
        </form>

    </div>
</div>

<div class="col-md-12">
    <table id="company-select-table" class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>ID</th>
            <th>사업자번호</th>
            <th>사업자명</th>
            <th>대표</th>
            <th>미수금</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#companies}}
            <tr>
                <td class="company-id">{{id}}</td>
                <td class="company-number">{{number}}</td>
                <td class="company-name"><a href="/company/update/{{id}}">{{name}}</a></td>
                <td class="company-owner">{{owner}}</td>
                <td class="company-unpaid">{{#unpaid}}{{unpaid}}{{/unpaid}}</td>
            </tr>
        {{/companies}}
        </tbody>
    </table>

    {{#pagenavigation}}
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="{{prevUrl}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
                </a>
            </li>
            {{#pageUrls}}
                <li class="page-item"><a class="page-link" href="{{url}}">{{pageNum}}</a></li>
            {{/pageUrls}}
            <li class="page-item">
                <a class="page-link" href="{{nextUrl}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
    {{/pagenavigation}}
</div>

{{>layout/footer}}